Function AdvScreen::font(Reference this, Integer size, Integer fBold, Integer fItalic, String face)
	PUSH_FIELD msgSequence
	PUSH_VAR size
	PUSH_VAR size
	PUSH_VAL Integer 2i
	+
	PUSH_VAR fBold
	PUSH_VAR fItalic
	PUSH_VAR face
	CALL CreateMessageEscapeSequence
	POP =
	NOP
	PUSH_FIELD reqFont
	PUSH_VAL Integer -1i
	POP =
	NOP
	PUSH_VAL Integer 0i
	Return
EndFunc

