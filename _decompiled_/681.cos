Function SaveBmp(String filename)
	PUSH_VAL String "SaveBmp-"
	PUSH_VAR filename
	+
	CALL Debug
	NOP
	INIT_LOCAL struct Sprite spr
	PUSH_OBJ  10
	PUSH_VAR spr
	CALL_METHOD copyAdvScreen
	NOP
	INIT_LOCAL struct File file
	PUSH_VAR file
	PUSH_VAR filename
	PUSH_VAL String ".bmp"
	+
	PUSH_VAL Integer 5i
	PUSH_VAL Integer 4i
	or
	CALL_METHOD Open
	NOP
	PUSH_VAR file
	PUSH_VAR spr
	CALL_METHOD SaveThumbnailImage
	NOP
	PUSH_VAR file
	CALL_METHOD Close
	NOP
	PUSH_VAL Integer 0i
	Return
EndFunc

