Function AdvScreen::create(Reference this)
	If (this.fCreate == 0)
        this.sprAdvBase.CreateSprite(67108865, {PUSH_OBJ  2}.w, {PUSH_OBJ  2}.h)    ; //TODO
        {PUSH_UNK}.AddSprite(51000, this.sprAdvBase)
        this.sprAdvBase.SetVisible(-1)
        this.sprBustupParent.CreateSprite(67108865, {PUSH_OBJ  2}.w, {PUSH_OBJ  2}.h)    ; //TODO
        this.sprAdvBase.AddSprite(40, this.sprBustupParent)
        this.sprBustupParent.SetVisible(-1)
        this.msgFrame.create()
        this.cg.clear()
        this.bustupMan.create(5)
        Integer i
        i := 0
    @_l_52:
        While (i <= 5)
            this.bustupMan.info[i].clear()
            i += 1
        EndWhile
        createToneFilter()
        NOP
        this.sprAdvBase.AttachToneFilter(this.toneFilter["NORMAL"])
        zoom(400, 300, 800, 600)
        this.fKeyUpdateFlush := -1
        this.fUpdate := 0
        this.fSelect := 0
        this.selectItem.Remove()
        this.fSkip := 0
        this.fAutoMode := 0
        this.fCreate := 0
	EndIf
EndFunc

