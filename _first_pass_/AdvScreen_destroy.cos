Function AdvScreen::destroy(Reference this)
    If (this.fCreate == -1)
        flushUpdate()
        {PUSH_UNK}.sprAdvBase.DetachSprite()
        If (this.sprTemp["transBase"].GetType() == "Sprite")
            {PUSH_UNK}.sprTemp["transBase"].DetachSprite
            this.sprTemp.Remove()
        EndIf
        this.sprAdvBase.DetachAllSprite()
        this.sprAdvBase.Release()
        this.sprCg.Release()
        this.sprBustupParent.DetachAllSprite()
        this.sprBustupParent.Release()
        this.msgFrame.destroy()
        this.fCreate := 0
    EndIf
EndFunc

