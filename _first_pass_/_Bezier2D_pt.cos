Function	Bezier2D::pt( Real t )
	Array	f
	f[0] := 1.0		; 6 / (6 * 1)
	f[1] := 3.0		; 6 / (2 * 1)
	f[2] := 3.0		; 6 / (1 * 2)
	f[3] := 1.0		; 6 / (1 * 6)
	;
	Vector2D	v
	Integer	i := 0
	Repeat
		Real	b
		b := f[i] * t.Power(i) * Real(1.0 - t).Power(3 - i)
		v.x += parent[i].x * b
		v.y += parent[i].y * b
		i += 1
	Until	i >= 4
	;
	Return	v
EndFunc
